<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/background_live_line"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GamesActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f03f3f3f"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:background="@drawable/toolbar_gradient_clr"
            app:popupTheme="@style/AppTheme.PopupOverlay"  >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:id="@+id/back"
                android:src="@drawable/back"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="52dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/app_icon"
                android:scaleType="fitXY"
                android:src="@drawable/app_logo" />


        </android.support.v7.widget.Toolbar>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_snake"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:drawableTop="@mipmap/snake"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="4dp"
            android:text="Snake"
            android:background="@drawable/series_back"/>

        <TextView
            android:id="@+id/btn_chess"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:drawableTop="@mipmap/bking"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="4dp"
            android:text="Chess"
            android:background="@drawable/series_back"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_doodle"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/doodle"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_margin="4dp"
            android:text="Doodle"
            android:background="@drawable/series_back"/>

        <TextView
            android:id="@+id/btn_duck"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/duck_hunt"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_margin="4dp"
            android:text="Duck Hunt"
            android:background="@drawable/series_back"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_snakeandladders"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/snakesladder"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_margin="4dp"
            android:text="Snakes and Ladders"
            android:background="@drawable/series_back"/>

    </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>