<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.cricflame.cricflame.MainActivity"
  >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_gradient_clr"
        app:popupTheme="@style/AppTheme.PopupOverlay"  >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:id="@+id/back"
            android:src="@drawable/back"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/app_icon"
            android:scaleType="fitXY"
            android:src="@drawable/app_logo" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<LinearLayout
    android:background="@color/colorHeading"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/liveline1"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:layout_height="50dp" />
    <TextView
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/liveline_match1"
        android:padding="20dp"
        android:text="Live Line Match 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>


        <View
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:background="@color/colorHeading"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/liveline2"
                android:layout_width="100dp"
                android:scaleType="fitXY"
                android:layout_height="50dp" />
            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:id="@+id/liveline_match2"
                android:padding="20dp"
                android:text="Live Line Match 2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

