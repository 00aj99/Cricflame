<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout android:id="@+id/overLayout"
        android:background="@drawable/live_match_highightedbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
        <TextView android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:id="@+id/session_overs"
            android:background="@drawable/over_ssn_heading"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 Over session" />
        <LinearLayout android:orientation="horizontal"
            android:id="@+id/sessionContent"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:weightSum="5.0"
            android:layout_below="@+id/session_overs">
            <TextView android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/ranking_item_header"
                android:gravity="center"
                android:id="@+id/sessionLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="Run Scored"
                android:layout_weight="5.0"
                android:layout_toLeftOf="@+id/overRight" />

        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:background="@drawable/bottom_round"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:weightSum="3.0"
            android:layout_below="@+id/sessionContent">
            <TextView android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:id="@+id/sessionExtraOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
            <TextView android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:id="@+id/sessionExtraMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
            <TextView android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:id="@+id/sessionExtraMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>