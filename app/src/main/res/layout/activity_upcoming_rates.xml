<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@mipmap/background_live_line"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpcomingRatesActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_gradient_clr"
        android:paddingBottom="5dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/back" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/app_icon"
            android:scaleType="fitXY"
            android:src="@drawable/app_logo" />


    </android.support.v7.widget.Toolbar>


    <android.support.design.widget.TabLayout
        android:id="@+id/tbl_upcoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/parrot_base"
        app:tabSelectedTextColor="@color/parrot_base"
        app:tabTextColor="#60bf6a"
        android:background="@drawable/toolbar_gradient_clr"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_upcoming"
        android:layout_width="match_parent"
        android:background="#f03f3f3f"
        android:layout_height="match_parent"
        android:layout_below="@id/tbl_betfair"/>
</LinearLayout>