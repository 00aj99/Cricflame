<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:layout_margin="4dp"
    android:background="@drawable/curved_background">

    <View
        android:id="@+id/v_commentary"
        android:layout_width="5dp"
        android:layout_height="100dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/series_first_back"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/v_commentary"
        android:layout_margin="4dp"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fav_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fav: INDIAasflknbasddd"
                android:gravity="left"
                android:textAllCaps="true"
                android:paddingRight="20dp"
                android:layout_weight=".33"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14.5sp"/>
            <TextView
                android:id="@+id/ssn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SSN: 50-52"
                android:textColor="#de374b"
                android:layout_weight=".66"
                android:gravity="left"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fav_team"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Status: 0"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/over"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Over: 10"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#ff9000"/>

            <TextView
                android:id="@+id/rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate: 20.24/22.2"
                android:gravity="left"
                android:layout_weight="1"
                android:textColor="#00ffcd"
                android:textSize="15sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Score: 105/2"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ff9000"/>


    </LinearLayout>
</RelativeLayout>