<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent"
    android:orientation="vertical"
    tools:context="com.cricflame.cricflame.Fragment.TestFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/main_bat_all_lay"
        android:background="@drawable/toolbar_gradient_clr"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnbat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_unselected_green"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:layout_marginRight="4dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="Batsman"
                android:textColor="@color/parrot_base"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnbowl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_unselected_green"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginRight="4dp"
                android:paddingTop="10dp"
                android:text="Bowler"
                android:textColor="@color/parrot_base"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_unselected_green"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="Allrounder"
                android:textColor="@color/parrot_base"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_rankings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent"
        android:orientation="horizontal"
        android:padding="@dimen/header_padding">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:text="Pos"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />




        <TextView
            android:id="@+id/rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".10"
            android:text="Team"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".10"
            android:text="Ratings"
            android:gravity="right"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_ranking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparent"/>

</LinearLayout>