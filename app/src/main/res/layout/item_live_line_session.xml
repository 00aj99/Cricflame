<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ssn_back"
    android:gravity="center"
    android:background="@drawable/live_match_highightedbackground"
    android:layout_marginTop="2dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="2dp">

    <TextView
        android:layout_width="140dp"
        android:layout_height="57dp"
        android:layout_alignParentRight="true"
        android:text="BALL RUNNING"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:id="@+id/ball_running_status"
        android:textColor="@color/black"
        android:elevation="5dp"
        android:background="@drawable/series_main_back"/>

    <TextView android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/rateTeam"
        android:padding="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="-"
        android:layout_toLeftOf="@+id/bhavLeft_lay"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/bhavLeft_lay"
        android:layout_toLeftOf="@+id/bhavRight_lay"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bhav_left_background"
        android:orientation="vertical">

        <TextView android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/line_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_gravity="center"/>

        <TextView android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/price_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="115"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/bhavRight_lay"
        android:layout_marginRight="2dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bhav_right_background"
        android:orientation="vertical">

        <TextView android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/line_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_gravity="center"/>

        <TextView android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/price_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85"
            android:layout_gravity="center" />
    </LinearLayout>
</RelativeLayout>