<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_date_wise_lay"
        android:background="@color/transparent"
        android:orientation="vertical"

        >
        <TextView
            android:text=""
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/toolbar_gradient_clr"
            android:padding="4dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="1dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@color/series_name_back"
            android:id="@+id/series_name_lay">

            <TextView
                android:text="Series Name"
                android:id="@+id/series_name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="0dp"
                android:textColor="#60bf6a" />


            <ImageView
                android:id="@+id/series_info"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right_arrow"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>



        <TextView
            android:text="Match Name"
            android:id="@+id/match_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/score_main_back"
            android:gravity="center_horizontal"
            android:textSize="11sp"
            android:textColor="@color/white" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/score_main_back"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

            <LinearLayout android:layout_width="52dp"
                android:layout_height="52dp"
                android:gravity="center"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/dark_black_outline_circle_background"
                android:id="@+id/team1_card_logo_image_view_lay">

                <ImageView
                    android:id="@+id/flag_team_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    />

            </LinearLayout>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/team_one_name"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:minWidth="80dp"
                    android:maxWidth="80dp"
                    android:text="Monterals Tigers"
                    android:textColor="@color/white"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/match_time"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:maxWidth="180dp"
                    android:text="1:30 AM"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/match_venue"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:maxWidth="180dp"
                    android:text="Maple Leaf North West Ground, King City"
                    android:textColor="@color/white"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/match_result"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:maxWidth="180dp"
                    android:text="India Won y 8 Wickets"
                    android:textColor="@color/orange_700"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

            <LinearLayout android:layout_width="52dp"
                android:layout_height="52dp"
                android:gravity="center"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/dark_black_outline_circle_background"
                android:id="@+id/team2_card_logo_image_view_lay">

                <ImageView
                    android:id="@+id/flag_team_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_gravity="center" />
            </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/team_two_name"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:minWidth="80dp"
                    android:maxWidth="80dp"
                    android:text="Edmonton Royals"
                    android:textColor="@color/white"/>

            </LinearLayout>



            <TextView
                android:id="@+id/id"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/name"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textStyle="bold"
                android:text="hello"
                android:textSize="17dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />


            <TextView
                android:id="@+id/tour_date"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                android:text="hello"
                android:textColor="@color/colorResult" />

            <ImageView
                android:id="@+id/item_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>