<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="2dp"
    card_view:cardCornerRadius=".3dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp"
    >
    <!-- card_view:cardCornerRadius="4dp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7002131d"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="CricFlame"
            android:textColor="@color/parrot_light"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@drawable/transparent"
            android:fontFamily="sans-serif"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="dkjef fhgrhgfrhgj"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:background="@drawable/transparent"
            android:textColor="@color/parrot_light"
            android:text="mbhkhjkfkgj"
            android:paddingLeft="8dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/news_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="100"
            android:paddingLeft="8dp"
            android:textColor="@color/white"
            android:background="@drawable/transparent"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="dkjef fhgrhgfrhgj"
            android:gravity="left"
            android:layout_marginBottom="2dp"
            android:fontFamily="sans-serif"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:textColor="@color/colorResult"
            android:textSize="15sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>