<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/transparent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.UpcomingMatchesFragment">

    <LinearLayout
        android:id="@+id/llt_upcoming_matches_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/lyt_teams"
            android:orientation="vertical"
            android:background="@drawable/new_series"
            android:paddingTop="8dp"
            android:paddingBottom="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#fff"
                android:id="@+id/txt_series_name"
                android:paddingTop="2dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="Chennai Super Kings tour of Bengaluru"
                android:autoSizeMinTextSize="11sp"
                android:autoSizeTextType="uniform" />


            <TextView
                android:textColor="#fff"
                android:id="@+id/txt_venue_view"
                android:paddingTop="2dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="1st March"
                android:autoSizeMinTextSize="11sp"
                android:autoSizeTextType="uniform" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imv_team1_flag"
                    android:background="@drawable/dark_black_outline_circle_background"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"/>

                <RelativeLayout android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/imv_team1_flag"
                    android:layout_centerVertical="true"
                    >
                    <TextView
                        android:textSize="11sp"
                        android:textColor="@color/white"
                        android:id="@+id/txt_team1_name_full"
                        android:layout_width="match_parent"
                        android:maxWidth="80dp"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="left"
                        android:layout_below="@+id/txt_team1_name_short"
                        android:textAllCaps="false" />
                    <TextView android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/txt_team1_name_short"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IND"
                        android:gravity="left"
                        android:singleLine="true"
                        android:textAllCaps="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView
                        android:textColor="@color/ranking_item_header"
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:id="@+id/txt_match_card_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="UPCOMING"
                        android:maxLines="1"
                        android:textSize="11.8dp"
                        android:includeFontPadding="false"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeTextType="uniform" />

                    <ImageView android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_gravity="center"
                        android:src="@drawable/vs_icon" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/odds_card_layout"
                        android:background="@drawable/odds_back"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.AppCompatTextView
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:layout_gravity="center"
                            android:id="@+id/odds1_card"
                            android:paddingLeft="6dp"
                            android:paddingTop="0dp"
                            android:paddingRight="3dp"
                            android:paddingBottom="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="79"
                            android:maxLines="1"
                            android:includeFontPadding="false"
                            android:textSize="10dp"
                            android:autoSizeMaxTextSize="10.5sp"
                            android:autoSizeMinTextSize="6sp"
                            android:autoSizeTextType="uniform" />

                        <View
                            android:id="@+id/white_separator"
                            android:background="#fff"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp" />
                        <android.support.v7.widget.AppCompatTextView
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                            android:id="@+id/odds2_card"
                            android:paddingLeft="3dp"
                            android:paddingTop="0dp"
                            android:paddingRight="6dp"
                            android:paddingBottom="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="49"
                            android:maxLines="1"
                            android:textSize="10dp"
                            android:includeFontPadding="false"
                            android:autoSizeMaxTextSize="10.5sp"
                            android:autoSizeMinTextSize="6sp"
                            android:autoSizeTextType="uniform" />
                    </LinearLayout>

                </LinearLayout>
                <RelativeLayout android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/imv_team2_flag"
                    android:layout_marginRight="4dp"
                    android:layout_centerVertical="true">
                    <TextView android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/txt_team2_name_short"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RSA"
                        android:singleLine="true"
                        android:gravity="right"
                        android:layout_centerHorizontal="true"
                        android:textAllCaps="true" />
                    <TextView android:textSize="11sp"
                        android:textColor="@color/white"
                        android:id="@+id/txt_team2_name_full"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxWidth="80dp"
                        android:gravity="right"
                        android:text=""
                        android:layout_below="@+id/txt_team2_name_short"
                        android:layout_centerHorizontal="true"
                        android:textAllCaps="false" />
                </RelativeLayout>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/imv_team2_flag"
                    android:background="@drawable/dark_black_outline_circle_background"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/llt_rate_record_lyt"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="England Tour"
            android:background="@drawable/toolbar_gradient_clr"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:paddingLeft="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@color/series_name_back">

            <TextView
                android:text="16-08-2018"
                android:id="@+id/rate_date"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="0dp"
                android:textColor="#60bf6a" />
        </RelativeLayout>

        <RelativeLayout android:id="@+id/bhavLayout"
            android:background="@drawable/live_match_highightedbackground"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp">

            <TextView
                android:id="@+id/txt_rate_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/white"
                android:text="24%"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/imv_arrow_bhav"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_toEndOf="@id/txt_rate_percent"
                android:src="@drawable/rate_arrow_up"
                android:layout_centerVertical="true"/>

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txt_rate_record_team"
                android:padding="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="ENGLAND"
                android:layout_toRightOf="@id/imv_arrow_bhav"
                android:layout_toLeftOf="@+id/txt_record_bhavLeft"
                android:layout_centerVertical="true" />

            <TextView android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txt_record_bhavLeft"
                android:background="@drawable/bhav_left_background"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:text="50"
                android:layout_toLeftOf="@+id/txt_record_bhavRight"
                android:layout_centerVertical="true" />

            <TextView
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txt_record_bhavRight"
                android:background="@drawable/bhav_right_background"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:text="51"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txt_record_bhavTeam2Layout"
            android:background="@drawable/live_match_highightedbackground"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp">

            <TextView android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txt_record_rateTeam2"
                android:padding="11dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:text="-"
                android:layout_toLeftOf="@+id/txt_record_bhavTeam2Left"
                android:layout_centerVertical="true" />
            <TextView android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txt_record_bhavTeam2Left"
                android:background="@drawable/bhav_left_background"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:text="-"
                android:layout_toLeftOf="@+id/txt_record_bhavTeam2Right"
                android:layout_centerVertical="true" />
            <TextView android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txt_record_bhavTeam2Right"
                android:background="@drawable/bhav_right_background"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:text="-"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txt_record_bhavDrawLayout"
            android:background="@drawable/live_match_highightedbackground"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp">

            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txt_record_rateDraw"
                android:padding="11dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:text="-"
                android:layout_toLeftOf="@+id/txt_record_bhavDrawLeft"
                android:layout_centerVertical="true" />

            <TextView
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txt_record_bhavDrawLeft"
                android:background="@drawable/bhav_left_background"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:text="-"
                android:layout_toLeftOf="@+id/txt_record_bhavDrawRight"
                android:layout_centerVertical="true" />

            <TextView
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txt_record_bhavDrawRight"
                android:background="@drawable/bhav_right_background"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:text="-"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>