<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.cricflame.cricflame.ICC_Ranking_Details">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ranking_app_bar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_Rankings_details"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/toolbar_gradient_clr"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/back" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/app_icon"
            android:scaleType="fitXY"
            android:src="@drawable/app_logo" />

    </android.support.v7.widget.Toolbar>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header_detials"
        android:paddingTop="2dp"
        android:elevation="0dp"
        android:text="Ranking"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/toolbar_Rankings_details"/>


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/toolbar_gradient_clr"
        app:tabIndicatorColor="@color/parrot_base"
        app:tabMode="fixed"
        app:tabTextColor="#60bf6a"
        app:tabSelectedTextColor="@color/parrot_base"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_below="@+id/ranking_app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f03f3f3f"
        />

</RelativeLayout>