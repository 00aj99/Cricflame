<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_gradient_clr"
        android:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:src="@drawable/back" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/app_icon"
            android:scaleType="fitXY"
            android:src="@drawable/app_logo" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".65"
            android:padding="5dp"
            android:text="hello"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pitch_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35"
            android:background="#48b3ff"
            android:padding="5dp"
            android:text="Pitch Report"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:fillViewport="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

            <RelativeLayout
                android:id="@+id/rel_one"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorAccent">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="30dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_arrow_back" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_two"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/black">

                <TextView
                    android:id="@+id/LiveData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Score"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

                <ImageView
                    android:id="@+id/sound"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:backgroundTint="#0000"
                    android:tint="@color/white"
                    android:src="@drawable/ic_volume" />


                <ImageView
                    android:id="@+id/image_live"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/t_live"
                    android:src="@drawable/round_corner" />


                <TextView
                    android:id="@+id/t_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Live"
                    android:textColor="#fff"
                    android:textSize="10dp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_layout">


                    <TextView
                        android:id="@+id/tvCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:text="tvcountry"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvScorerun"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/tvCountry"
                        android:background="#fff"
                        android:text="tvScorerun"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textwicket"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tvScorerun"
                        android:background="#fff"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="textwicket"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textover"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/textwicket"
                        android:background="#fff"
                        android:text="textover"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/secondover"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="#fff"
                        android:text="secondover"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12dp"
                        />

                    <TextView
                        android:id="@+id/secondinnwicket"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_toLeftOf="@id/secondover"
                        android:background="#fff"
                        android:text="hhhh"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12dp"
                        />

                    <TextView
                        android:id="@+id/scoresecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp" android:layout_toLeftOf="@+id/secondinnwicket"
                        android:text="hhh"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                         />

                    <TextView
                        android:id="@+id/country2tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/scoresecond"
                        android:text="BatCountry2"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                         />

                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/rel_two"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_layout">

                <TextView
                    android:id="@+id/RRR"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#fff"
                    android:text="RRR:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold"
                     />

                <TextView
                    android:id="@+id/RRRvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/RRR"
                    android:background="#fff"
                    android:text="RRR:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold"
                     />

                <TextView
                    android:id="@+id/RunRate1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:text="Run Rate:"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/RunRate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/RunRate1"
