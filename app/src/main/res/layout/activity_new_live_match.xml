<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res-auto"
    app:background="@mipmap/background_live_line"
    app:layout_width="match_parent"
    app:layout_height="match_parent"
    tools:ignore="NamespaceTypo">

    <android.support.design.widget.TabLayout
        app:id="@+id/tabLayout"
        app:background="@drawable/toolbar_gradient_clr"
        app:layout_width="match_parent"
        app:layout_height="wrap_content"
        android:tabIndicatorColor="@color/parrot_base"
        android:tabMode="fixed"
        android:tabTextColor="#60bf6a"
        android:tabSelectedTextColor="@color/parrot_base"
        />
    <android.support.v4.view.ViewPager
        app:id="@+id/viewPager"
        app:layout_width="match_parent"
        app:layout_height="wrap_content"
        app:layout_below="@+id/tabLayout" />
</RelativeLayout>
