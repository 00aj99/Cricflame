<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="9dp"
    android:paddingTop="8dp"
    android:paddingRight="6dp"
    android:paddingBottom="8dp"
    android:background="@color/parrot_base"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView android:textColor="@color/white"
        android:id="@+id/team_name_in_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:gravity="left"
        android:text="TEAMS"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".75">
        <TextView android:textColor="@color/white"
            android:id="@+id/played_matches_in_table"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="P"
            android:gravity="center"
            android:layout_weight="1.0" />
        <TextView android:textColor="@color/white"
            android:id="@+id/won_matches_in_table"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="2dp"
            android:text="W"
            android:layout_weight="1.0" />
        <TextView android:textColor="@color/white"
            android:id="@+id/lost_matches_in_table"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="L"
            android:layout_weight="1.0" />
        <TextView android:textColor="@color/white"
            android:id="@+id/noresult_matches_in_table"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="NR"
            android:layout_weight="1.0" />
        <TextView android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/points_in_table"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="2dp"
            android:text="Pts" android:layout_weight="1.6" />
    </LinearLayout>
    <TextView android:textColor="@color/white"
        android:id="@+id/nrr_in_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="+0.393"
        android:layout_weight="1" />
</LinearLayout>
