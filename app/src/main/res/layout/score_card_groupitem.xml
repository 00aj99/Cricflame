<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_group_container"
    android:background="@drawable/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout android:id="@+id/group_container"
        android:background="@drawable/toolbar_gradient_clr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
            android:id="@+id/team_name"
            android:background="@drawable/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:text="South Africa"
            android:layout_toLeftOf="@+id/team_total"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            tools:ignore="NotSibling" />
        <TextView android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/team_total"
            android:background="@drawable/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@+id/drop_down"
            android:layout_centerVertical="true"
            tools:ignore="NotSibling" />
        <ImageView android:id="@+id/drop_down"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_action_arrow_drop_down" />
    </RelativeLayout>
</RelativeLayout>
