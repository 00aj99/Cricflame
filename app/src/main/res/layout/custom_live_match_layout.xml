<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lyt_teams"
        android:orientation="vertical"
        android:background="@drawable/transparent"
        android:paddingTop="8dp"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#fff"
            android:id="@+id/txt_venue_view"
            android:paddingTop="2dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="Chennai Super Kings tour of Bengaluru"
            android:autoSizeMinTextSize="11sp"
            android:autoSizeTextType="uniform" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/dark_black_outline_circle_background"
                android:id="@+id/team1_card_logo_image_view_lay">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/imv_team1_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/applogo" />
            </LinearLayout>

            <RelativeLayout android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/team1_card_logo_image_view_lay"
            android:layout_centerVertical="true"
                >
                <TextView
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:id="@+id/txt_team1_name_full"
                    android:layout_width="match_parent"
                    android:maxWidth="80dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="left"
                    android:layout_below="@+id/txt_team1_name_short"
                    android:textAllCaps="false" />
                <TextView android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txt_team1_name_short"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                    android:gravity="left"
                android:singleLine="true"
                android:textAllCaps="true" />
        </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:textColor="@color/ranking_item_header"
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:id="@+id/txt_match_card_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="LIVE"
                    android:maxLines="1"
                    android:textSize="11.8dp"
                    android:includeFontPadding="false"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeTextType="uniform" />

        <ImageView android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:src="@drawable/vs_icon" />
            </LinearLayout>
        <RelativeLayout android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/team2_card_logo_image_view_lay"
            android:layout_marginRight="4dp"
            android:layout_centerVertical="true">
            <TextView android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txt_team2_name_short"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:singleLine="true"
                android:gravity="right"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true" />
            <TextView android:textSize="11sp"
                android:textColor="@color/white"
                android:id="@+id/txt_team2_name_full"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="80dp"
                android:gravity="right"
                android:text=""
                android:layout_below="@+id/txt_team2_name_short"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false" />
        </RelativeLayout>
            <LinearLayout android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/dark_black_outline_circle_background"
                android:id="@+id/team2_card_logo_image_view_lay">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/imv_team2_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/applogo" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>